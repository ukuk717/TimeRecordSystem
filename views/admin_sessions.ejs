<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>勤怠管理システム | 勤務記録訂正</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="app-header">
    <div class="app-header__brand">
      <h1 class="app-header__title">
        <a href="/admin" class="app-header__home-link">勤怠管理システム</a>
      </h1>
      <span class="app-header__role">テナント管理者</span>
    </div>
    <button class="menu-toggle" type="button" aria-label="メニューを開閉" aria-expanded="false">
      <span class="menu-toggle__bar"></span>
      <span class="menu-toggle__bar"></span>
      <span class="menu-toggle__bar"></span>
    </button>
    <nav class="app-header__nav">
      <a href="/admin" class="nav-link">ダッシュボード</a>
      <a href="/admin/payrolls" class="nav-link">給与明細送信</a>
      <a href="/admin/role-codes" class="nav-link">ロールコード管理</a>
      <a href="/password/change" class="nav-link">パスワード変更</a>
      <form method="post" action="/logout" class="nav-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn link">ログアウト</button>
      </form>
    </nav>
  </header>
  <main class="container">
    <% if (flash) { %>
      <div class="flash <%= flash.type %>"><%= flash.message %></div>
    <% } %>

    <section class="card">
      <h2>勤務記録訂正</h2>
      <p>
        対象従業員:
        <strong><%= employee.username %></strong>
        <% if (employee.email) { %>
          <span class="muted">(<%= employee.email %>)</span>
        <% } %>
      </p>
      <form method="get" action="/admin/employees/<%= employee.id %>/sessions" class="form form-inline">
        <label>
          <span>年</span>
          <input type="number" name="year" value="<%= targetYear %>" min="2000" max="2100">
        </label>
        <label>
          <span>月</span>
          <input type="number" name="month" value="<%= targetMonth %>" min="1" max="12">
        </label>
        <button type="submit" class="btn">表示</button>
      </form>
      <p>
        表示中の月合計:
        <strong class="highlight-sm"><%= monthlySummary.formattedTotal %></strong>
      </p>
    </section>

    <section class="card">
      <h2>勤務記録の追加</h2>
      <form
        method="post"
        action="/admin/employees/<%= employee.id %>/sessions<%= queryString %>"
        class="form form-inline session-add-form"
        id="sessionAddForm"
      >
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <label class="form-field">
          <span>開始日時</span>
          <input
            type="datetime-local"
            name="startTime"
            required
            min="2000-01-01T00:00"
            max="2100-12-31T23:59"
          >
        </label>
        <label class="form-field">
          <span>終了日時</span>
          <input
            type="datetime-local"
            name="endTime"
            required
            min="2000-01-01T00:00"
            max="2100-12-31T23:59"
          >
        </label>
        <button type="submit" class="btn primary">記録を追加</button>
      </form>
    </section>

    <section class="card">
      <h2>勤務記録一覧</h2>
      <div class="table-responsive">
        <table class="table session-table">
          <thead>
            <tr>
              <th>開始</th>
              <th>終了</th>
              <th>合計</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% if (sessions.length === 0) { %>
              <tr><td colspan="4">対象期間の勤務記録がありません。</td></tr>
            <% } else { %>
              <% sessions.forEach(function(session) { %>
                <tr>
                  <td>
                    <input
                      type="datetime-local"
                      name="startTime"
                      value="<%= session.startInput %>"
                      required
                      min="2000-01-01T00:00"
                      max="2100-12-31T23:59"
                      form="session-form-<%= session.id %>"
                    >
                  </td>
                  <td>
                    <input
                      type="datetime-local"
                      name="endTime"
                      value="<%= session.endInput %>"
                      min="2000-01-01T00:00"
                      max="2100-12-31T23:59"
                      form="session-form-<%= session.id %>"
                    >
                  </td>
                  <td><%= session.formattedMinutes %></td>
                  <td>
                    <div class="session-actions">
                      <button
                        type="submit"
                        class="btn primary"
                        form="session-form-<%= session.id %>"
                      >
                        保存
                      </button>
                      <button
                        type="submit"
                        class="btn danger"
                        form="session-form-<%= session.id %>"
                        formaction="/admin/employees/<%= employee.id %>/sessions/<%= session.id %>/delete<%= queryString %>"
                        formnovalidate
                        data-confirm-message="選択した勤務記録を削除します。よろしいですか？"
                      >
                        削除
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
      <% if (sessions.length > 0) { %>
        <% sessions.forEach(function(session) { %>
          <form
            id="session-form-<%= session.id %>"
            method="post"
            action="/admin/employees/<%= employee.id %>/sessions/<%= session.id %>/update<%= queryString %>"
          >
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          </form>
        <% }); %>
      <% } %>
    </section>
  </main>

  <div class="dialog-backdrop" id="sessionConfirmDialog" hidden>
    <div class="dialog">
      <h3>勤務記録追加の確認</h3>
      <p>以下の内容で勤務記録を追加します。</p>
      <dl class="definition-list">
        <div>
          <dt>開始日時</dt>
          <dd id="confirmSessionStart">-</dd>
        </div>
        <div>
          <dt>終了日時</dt>
          <dd id="confirmSessionEnd">-</dd>
        </div>
      </dl>
      <p class="form-note">入力内容を今一度確認してください。</p>
      <div class="dialog-actions">
        <button type="button" class="btn" id="sessionConfirmCancel">戻る</button>
        <button type="button" class="btn primary" id="sessionConfirmSubmit">追加する</button>
      </div>
    </div>
  </div>

  <script src="/header.js" defer></script>
  <script>
    (function () {
      const form = document.getElementById('sessionAddForm');
      if (!form) {
        return;
      }
      const dialog = document.getElementById('sessionConfirmDialog');
      if (!dialog) {
        return;
      }
      const startInput = form.querySelector('input[name="startTime"]');
      const endInput = form.querySelector('input[name="endTime"]');
      const confirmStart = document.getElementById('confirmSessionStart');
      const confirmEnd = document.getElementById('confirmSessionEnd');
      const confirmSubmit = document.getElementById('sessionConfirmSubmit');
      const confirmCancel = document.getElementById('sessionConfirmCancel');
      let confirmed = false;

      form.addEventListener('submit', (event) => {
        if (confirmed) {
          confirmed = false;
          return;
        }
        event.preventDefault();
        if (typeof form.reportValidity === 'function' && !form.reportValidity()) {
          return;
        }
        const startValue = startInput ? startInput.value : '';
        const endValue = endInput ? endInput.value : '';
        confirmStart.textContent = startValue ? startValue.replace('T', ' ') : '-';
        confirmEnd.textContent = endValue ? endValue.replace('T', ' ') : '-';
        dialog.hidden = false;
      });

      if (confirmSubmit) {
        confirmSubmit.addEventListener('click', () => {
          dialog.hidden = true;
          confirmed = true;
          form.submit();
        });
      }

      if (confirmCancel) {
        confirmCancel.addEventListener('click', () => {
          dialog.hidden = true;
        });
      }

      dialog.addEventListener('click', (event) => {
        if (event.target === dialog) {
          dialog.hidden = true;
        }
      });
    })();
  </script>
</body>
</html>
